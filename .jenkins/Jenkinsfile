pipeline {
    agent any
    stages {
        stage('Build') {
           
               agent{
                docker{
                    image 'composer:latest'
                    args '''
                    -v ./:/app
                    -w /app
                    '''

                    reuseNode true
                }
            }
             steps {
                    echo "building .... "
                    sh '''
                        composer install
                     ''' 
            }
        }
        stage('Test') {
            steps {
                 echo "testing ... "
            }
        }
        stage('Deploy') {
            steps {
                 echo "deploying ... "
            }
        }
    }
}